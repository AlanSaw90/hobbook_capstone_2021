
<%= turbo_frame_tag 'test' do %>
  <h1 style='color: #0d6efd; font-weight: bold; margin-left: 45%;'> <%= @welcome %> </h1>
<% end %>

<div class="card" style="width: 600px; margin-left: 35%; border-radius:15px;">
<% @posts.each do |post| %>
  <%= link_to post_path(post) do %>
  <% if post.photo.attached? %>
    <%= image_tag post.photo, style: 'width: 600px; border-radius: 15px;' %>
  <% end %>
  
  <div class="card-body">
    <h5 class="card-title btn btn-primary" style="height: 5px;  padding: 10px 10px 30px 10px; margin-left: 38%;"> <%= post.caption %></h5>
  </div>  
  <% end %>
  <hr></hr>
<% end %>
</div>




